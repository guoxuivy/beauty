					ok:function(obj){
						var _self=obj._self;
						var has_list = self.find('.fzxzxm_two_com_09');//已经存在的列
						var pro_k=has_list.length;//当前序号
						var result_list=_self.find('.result_pro li');
						$.each( result_list, function(i, pro){
							pro=$(pro);
							var p_name=pro.attr('data-name');
							var p_id=pro.attr('rel');
