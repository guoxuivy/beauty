					$(".add_pro").append('<li rel="'+n.id+'" data-name="'+n.netname+'" ><span></span>'+n.netname+'</li>')
					
				});

				var d = Idialog({
					top:150,
					width:800,
					title:'选择人员',
					content:$('#widget_cu'),
