	function validate(classname){
		var nf = classname.Validform({
			tiptype:3,
			beforeSubmit:function() {
				var next = false;
				var ajax_url = "<?php echo $this->url('add'); ?>";
				var data = classname.serialize();
				$.ajax({
					url : ajax_url,
					data : data,
					type : 'post',
					async : false,
					dataType : 'json',
					success : function(json) {
						if(json.code == '400') {
							Idialog.tips(json.msg,2);
						}
						else {
							next = true;
						}
					},
					error : function(XMLHttpRequest, textStatus, errorThrown) {
						Idialog.tips(textStatus,2);
					}
				});
				return next;
			}
		});

		nf.addRule([
		{
			ele:".new_inputxt:eq(0)",
			datatype:"m",
			nullmsg:"请输入手机号！"
		},
		{
			ele:"select:eq(0)",
			datatype:"*",
			nullmsg:"请选择性别！"
		},
		{
			ele:"select:eq(1)",
			datatype:"*",
			nullmsg:"请选择部门！"
		},
		{
			ele:"select:eq(2)",
			datatype:"*",
			nullmsg:"请选择职位！"
		},
		{
			ele:".new_inputxt:eq(1)",
			datatype:"*",
			nullmsg:"请输入登陆昵称！"
		},
		{
			ele:".new_inputxt:eq(2)",
			datatype:"*",
			nullmsg:"请输入密码！"
		}
		]);
	}

