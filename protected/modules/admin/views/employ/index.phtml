 */
$(document).on('click','.delete',function(){
	var obj = $(this).parent().parent();
	var id = $(this).parent().attr('rel');

	var d = Idialog({
		top:120,
		width:500,
		title:'通知',
		content:'您确认删除吗？',
		ok:function(html){
			$.get("<?php echo $this->url('delete') ?>", { id: id },function(html){
				var jobj = $.parseJSON(html);
				if(jobj['code']=='200'){
					var d = Idialog({
						top:120,
						width:500,
						title:'通知',
						content:'删除成功',
						ok:function(html){
							obj.remove();
							return true;
						},
						cancel:false,
					});
				}else{
					var d = Idialog({
						top:120,
						width:500,
						title:'通知',
						content:jobj['msg'],
						ok:function(obj){
							return true;
						},
						cancel:false,
					});
				}
			});
			return true;
		},
		cancel:true,
	});
});

