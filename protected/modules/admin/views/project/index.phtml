							Idialog({
								top:150,
								width:500,
								title:'提示',
								content:json.msg+'一共'+json.data.total+'条,成功导入:'+json.data.success+'条!',
								init:function(obj){
									obj.find('.idialog').css('z-index','1001');
								},
								ok:function(obj){
									location.reload();
								},
								cancel:false
							})
							
						}

					}
				});
				obj.find('.uploadfile').css('width','164px');

			},
			ok:function(obj){
				//console.log(obj);
				
				return false;
			},
			cancel:true
		});
	}



});

