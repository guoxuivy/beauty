$(function(){

	// 修改商品状态
	$('.change').click(function(){
		var id=$(this).attr('rel');
		var obj = $(this);
		$.get("<?php echo $this->url('change') ?>", { id: id },function(html){
			var jobj = $.parseJSON(html);
			var dataobj = jobj['data'];
			var status = dataobj['status'];
			obj.html(status==0?"启用":"停用");
			obj.attr('style',status==0?'':'background-color: #ddd;color: #666;');
			obj.parent().prev().attr('title',status==1?"启用":"停用").html(status==1?"启用":'<fone style="color:red">停用</fone>');
		});
	});

	$(document).on('click','.delete',function(){
		var obj = $(this).parent().parent();
		var id = $(this).parent().attr('rel');

		var d = Idialog({
			top:120,
			width:500,
			title:'通知',
			content:'您确认删除吗？',
			ok:function(html){
				$.get("<?php echo $this->url('delete') ?>", { id: id },function(html){
					var jobj = $.parseJSON(html);
					if(jobj['code']=='200'){
						var d = Idialog({
							top:120,
							width:500,
							title:'通知',
							content:'删除成功',
							ok:function(html){
								obj.remove();
								return true;
							},
							cancel:false,
						});
					}else{
						var d = Idialog({
							top:120,
							width:500,
							title:'通知',
							content:'删除失败',
							ok:function(obj){
								return true;
							},
							cancel:false,
						});
					}
				});
				return true;
			},
			cancel:true,
		});
	});

	//批量上传 
	$('.c_update').click(function(){
		<?php if($pager['pagener']['recordsTotal']): ?>
			Idialog({
					top:150,
					width:500,
					title:'数据警告',
					content:'确定将追加数据！',
					ok:function(obj){
						upload()
					}
			})
		<?php else: ?>
		upload();
		<?php endif; ?>
	});
