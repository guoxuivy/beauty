		var d = Idialog({
			top:150,
			width:500,
			title:'批量上传',
			content:$('.update'),
			init:function(obj){
				obj.find('#upload').html5uploader({
					auto:true,
					multi:false,
					removeTimeout:2000,
					buttonText:'<img src="<?php echo $this->basePath("public") ?>/images/pl_03.png" />',
					url:'<?php echo $this->url("upload") ?>',
					itemTemplate:'',
					fileTypeExts:'application/vnd.ms-excel',
					onUploadStart:function(){
						//alert('开始上传');
