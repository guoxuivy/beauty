var s = 120, t;
function times(){
	s--;
	$("#outtime").html(s);
	t = setTimeout('times()', 1000);
	if ( s <= 0 ){
		s = 120;
		clearTimeout(t);
		$('.msmCode').show();
		$('.msmCode').next().hide();

	}
}
 
