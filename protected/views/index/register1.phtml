//短信验证码
$('.msmCode').click(function(){
	var verifyCode = $('#verifyCode').val();
	if(verifyCode==''){
		Idialog.tips('请输入图形验证码！',3);
		return false;
	}

	var phone = $('input[name="phone"]').val();
	if(phone==''){
		Idialog.tips('请输入手机号！',3);
		return false;
	}
	var error = false;
	$.ajax({
		type: "POST",   
		data: "verifyCode="+verifyCode,
		async:false,
		url: "<?php echo $this->url('checkdecode') ?>",
		dataType: "json" ,
		cache: false,
		success: function(json){
			if(json.code==200){
			}else{
				Idialog.tips(json.msg,3);
				error = true ;
			}

		}
	});
	if(error){
		return false;
	}

	$('.msmCode').hide();
	$('.msmCode').next().show();
	$('input[name="phone"]').attr('readonly','readonly');
	times();
	$.post("<?php echo $this->url('phoneCode') ?>", { phone: phone, verifyCode: verifyCode },function(json){
		if(json.code == '200'){
		}else{
			Idialog.tips(json.msg,3);
		}
	},"json");
});

